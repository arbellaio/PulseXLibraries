<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PulseXLibraries.Controls.NavigationDrawer.NavigationShellDrawerContent"
             x:Name="DrawerShellContentView"
             xmlns:model="clr-namespace:PulseXLibraries.Models.NavigationDrawerModel;assembly=PulseXLibraries"
             BindingContext="{x:Reference DrawerShellContentView}">

    <StackLayout Orientation="Horizontal">
        <Image>
            <Image.Source>
                <FontImageSource Color="{Binding FontImageItem.Color}"
                                 FontFamily="{Binding FontImageItem.FontFamily}"
                                 Size="{Binding FontImageItem.Size}"
                                 Glyph="{Binding FontImageItem.Glyph}" />
            </Image.Source>
        </Image>
        <Label Text="{Binding ItemText}"
               TextColor="{Binding ItemTextColor}"
               FontFamily="{Binding ItemFontFamily}"
               FontSize="{Binding ItemFontSize}" />
    </StackLayout>

</ContentView>