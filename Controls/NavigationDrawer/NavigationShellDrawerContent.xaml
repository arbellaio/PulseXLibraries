<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PulseXLibraries.Controls.NavigationDrawer.NavigationShellDrawerContent"
             x:Name="DrawerShellContentView"
             xmlns:model="clr-namespace:PulseXLibraries.Models.NavigationDrawerModel;assembly=PulseXLibraries"
             BindingContext="{x:Reference DrawerShellContentView}">

    <ListView
        ItemsSource="{Binding ItemsSource, Source={x:Reference DrawerShellContentView}}"
        x:DataType="model:NavigationDrawerItemModel">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding ItemImage}" />
                        <Label Text="{Binding ItemName}"
                               TextColor="Gray"
                               FontFamily="RobotoRegular"
                               FontSize="Large" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentView>