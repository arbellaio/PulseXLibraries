<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
                     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                     xmlns:sketchControl="clr-namespace:PulseXLibraries.Controls.SketchControl;assembly=PulseXLibraries"
                     xmlns:icons="clr-namespace:PulseXLibraries.Resources.Icons;assembly=PulseXLibraries"
                     x:Class="PulseXLibraries.Controls.Signature.SignaturePadView" BackgroundColor="Transparent">


    <StackLayout HorizontalOptions="FillAndExpand"  BackgroundColor="Transparent" VerticalOptions="FillAndExpand">
        <StackLayout Padding="2,2,2,2" BackgroundColor="Transparent" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <sketchControl:SketchView x:Name="SketchPad" InkColor="Black"  HorizontalOptions="FillAndExpand" BackgroundColor="Aqua"  VerticalOptions="FillAndExpand" />
        </StackLayout>
        <ImageButton Clicked="ClearPad" BackgroundColor="Transparent" HorizontalOptions="EndAndExpand">
            <ImageButton.Source>
                <FontImageSource Glyph="{x:Static icons:FontAwesomeIcons.X}" Color="Black" FontFamily="FontAwesomeRegular"/>
            </ImageButton.Source>
        </ImageButton>
    </StackLayout>
</ContentView>